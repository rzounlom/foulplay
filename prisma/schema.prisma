// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String   @id @default(cuid())
  clerkId        String   @unique
  name           String
  defaultNickname String? // Permanent nickname that can be used as default when joining rooms
  gamesPlayed    Int      @default(0) // Total number of games played
  gamesWon       Int      @default(0) // Total number of games won
  totalPoints    Int      @default(0) // Total points accumulated across all games
  skipTour       Boolean  @default(false) // Whether to skip the interactive tour on game start
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  players        Player[]
}

model Room {
  id                  String   @id @default(cuid())
  code                String   @unique
  hostId              String
  status              String   @default("lobby") // lobby | active | ended
  mode                String?
  sport               String?
  showPoints          Boolean  @default(false) // Host can toggle to show/hide other players' points
  allowJoinInProgress Boolean  @default(true) // Host can allow new players to join while game is active (default on; host can uncheck)
  handSize            Int      @default(6) // Number of cards dealt to each player
  allowQuarterClearing Boolean @default(false) // Enable quarter-based card clearing (football/basketball only)
  canTurnInCards       Boolean @default(true) // Always true; legacy field (host toggle removed)
  currentQuarter      String?  // "Q1" | "Q2" | "Q3" | "Q4" | null
  quarterIntermissionEndsAt DateTime? // When the 5-min quarter-ending intermission ends (UTC)
  pendingQuarterDiscardSelections Json? // { [playerId]: cardInstanceId[] } — processed when intermission ends
  quarterDiscardDonePlayerIds Json? // string[] — player IDs who clicked "Done" for this intermission
  suggestEndRoundPlayerIds Json? // string[] — player IDs who clicked "Suggest end round" (non-host only)
  lastGameEndResult   Json?    // { winnerId, winnerName, leaderboard: [{ playerId, name, nickname, points }] } — shown on end-game page
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  players             Player[]
  gameState           GameState?
  cardInstances       CardInstance[]
  submissions         CardSubmission[]
  messages            Message[]
}

model Player {
  id        String   @id @default(cuid())
  userId    String
  roomId    String
  points    Int      @default(0)
  isHost    Boolean  @default(false)
  nickname  String?  // Optional nickname for this room
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  gameStates GameState[]
  cardInstances CardInstance[]
  submissions CardSubmission[]
  votes      CardVote[]
  messages   Message[]

  @@unique([userId, roomId])
  @@index([roomId])
}

model GameState {
  id                  String   @id @default(cuid())
  roomId              String   @unique
  currentTurnPlayerId String
  activeCardInstanceId String? @unique
  deckSeed            String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  room                Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  currentTurnPlayer   Player   @relation(fields: [currentTurnPlayerId], references: [id])
  activeCardInstance  CardInstance? @relation("ActiveCardInstance", fields: [activeCardInstanceId], references: [id])
}

model Card {
  id          String   @id @default(cuid())
  sport       String   // "football" | "basketball"
  title       String
  description String
  severity    String   // "mild" | "moderate" | "severe"
  type        String   // "action" | "challenge" | "penalty"
  points      Int      @default(0) // Points awarded for this card
  createdAt   DateTime @default(now())
  cardInstances CardInstance[]

  @@index([sport])
  @@index([severity])
}

model CardInstance {
  id        String   @id @default(cuid())
  roomId    String
  cardId    String
  drawnById String
  status    String   @default("drawn") // "drawn" | "submitted" | "resolved"
  submissionId String? // Optional: links to submission if this card is part of one
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  drawnBy   Player   @relation(fields: [drawnById], references: [id], onDelete: Cascade)
  gameState GameState? @relation("ActiveCardInstance")
  submission CardSubmission? @relation(fields: [submissionId], references: [id], onDelete: SetNull)
  votes     CardVote[] // Votes on this specific card instance

  @@index([roomId])
  @@index([drawnById])
  @@index([submissionId])
}

model CardSubmission {
  id             String   @id @default(cuid())
  roomId         String
  submittedById  String
  status         String   @default("pending") // "pending" | "approved" | "rejected"
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  room           Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  submittedBy    Player   @relation(fields: [submittedById], references: [id], onDelete: Cascade)
  cardInstances  CardInstance[] // Multiple card instances can belong to one submission
  votes          CardVote[]

  @@index([roomId])
  @@index([submittedById])
}

model CardVote {
  id            String   @id @default(cuid())
  submissionId  String
  cardInstanceId String  // Vote is for a specific card instance within the submission
  voterPlayerId String
  vote          Boolean  // true = approve, false = reject
  createdAt     DateTime @default(now())
  submission    CardSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  cardInstance  CardInstance @relation(fields: [cardInstanceId], references: [id], onDelete: Cascade)
  voter         Player   @relation(fields: [voterPlayerId], references: [id], onDelete: Cascade)

  @@unique([cardInstanceId, voterPlayerId]) // One vote per card per voter
  @@index([submissionId])
  @@index([cardInstanceId])
}

model Message {
  id        String   @id @default(cuid())
  roomId    String
  senderId  String   // Player id
  message   String
  createdAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  sender    Player   @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([senderId])
}
